<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <Properties>
        <Property name="log-path">logs</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="time=%d{yyy-MM-dd HH:mm:ss.SSS zzz} | level=%-5level | hostname=${sys:hostName} |
 threadId=%t | service=InventorySvc | class=%logger{36} | remotehost=%X{remoteIP} | userId=%X{userId} | message=%msg%n" />
        </Console>
        <RollingFile name="RollingFile" fileName="${log-path}/InventorySvc-${sys:hostName}.log"
                     filePattern="${log-path}/InventorySvc-${sys:hostName}-%d{yyyy-MM-dd}-%i.log" >
            <PatternLayout pattern="time=%d{yyy-MM-dd HH:mm:ss.SSS zzz} | level=%-5level | hostname=${sys:hostName} |
 threadId=%t | service=InventorySvc | class=%logger{36} | remotehost=%X{remoteIP} | userId=%X{userId} | message=%msg%n" />
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="org.mongodb.driver" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="com.ntw.oms.cart" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Logger>
        <Root level="all">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile" />
        </Root>
    </Loggers>
</configuration>